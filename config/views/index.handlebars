<h1>Eat-Da-Burger</h1>

<h3>Create a burger of your choice to devour</h3>

<ul>
    {{#each events}}
        <li>
            <p>ID: {{this.id}}</p>
            <p>eat: {{this.burger}}</p>
            <form action="/delete?"_method="DELETE" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">DELETE</button>
            </form>
        </li>
    {{/each}}
</ul>
<h2>Add a burger of your Choice</h2>
<form method="Post" action="create">
    <textarea type="text" name="burger">
        <button type="submit">SAVE BURGER</button>
    </textarea>
</form>
<form action="/" method="POST">
    <textarea type="text" name="event"></textarea>

    <button type="submit">Submit</button>
</form>

